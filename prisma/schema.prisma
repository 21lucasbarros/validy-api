generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CertificateType {
  A1
  A3
}

enum CertificateStatus {
  PENDING
  COMPLETED
}

model Certificate {
  id                  Int               @id @default(autoincrement())
  name                String
  cnpj                String
  type                CertificateType   // só aceita A1 ou A3
  expiresAt           DateTime
  notificationEmails  String[]          // array de emails para notificação
  status              CertificateStatus @default(PENDING)
  createdAt           DateTime          @default(now())
}
